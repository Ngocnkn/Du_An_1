<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appmusic">
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.appmusic.finalapp.SplashActivity"
            android:theme="@style/StartTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.appmusic.finalapp.MainActivity"
            android:label="Music of Life"
            android:theme="@style/TranslucentActionBarMain">

        </activity>
<!--        <service android:name="fsdaf" pro></service>-->
        <activity
            android:name="com.example.appmusic.finalapp.PlaySongActivity"
            android:theme="@style/TranslucentActionBar">

        </activity>
        <activity
            android:name="com.example.appmusic.finalapp.MainFragmentActivity"
            android:theme="@style/TranslucentActionBar"></activity>
        <activity
            android:name="com.example.appmusic.finalapp.ShowListSongActivity"
            android:theme="@style/TranslucentActionBar" />

        <service android:name="com.example.appmusic.service.MyMusicService" />
    </application>

</manifest>